<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid>
        <StackPanel Margin="0 0 0 100">
            <TextBlock Text="Авторизация" FontSize="50" TextAlignment="Center" FontWeight="Bold" Margin="0 40 0 0"/>
            <TextBlock TextAlignment="Center" Margin="300 60 300 0" FontSize="20">Логин</TextBlock>
            <TextBox Margin="300 0 300 0" Height="40" FontSize="20" Padding="5"/>
            <TextBlock TextAlignment="Center" Margin="300 30 300 0" FontSize="20">Пароль</TextBlock>
            <PasswordBox Margin="300 0 300 60" Height="40" FontSize="20" Padding="5"/>
        </StackPanel>
        <StackPanel Margin="0 370 0 0">
            <Grid Margin="350 0 350 0">
                <Button HorizontalAlignment="Left" Height="50" Width="110" Background="#FF555555" Foreground="#FFE0E0E0" FontSize="15">Регистрация</Button>
                <Button Click="Button_Ent_Click" HorizontalAlignment="Right" Height="50" Width="110" Background="#FF555555" Foreground="#FFE0E0E0" FontSize="15">Войти</Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
